<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.app.cellstudio.pokemobile.interactor.viewmodel.PokemonTCGDetailsViewModel" />

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />

        <import type="android.view.View" />

    </data>

    <RelativeLayout
        android:id = "@+id/rlDetails"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below = "@+id/toolbar"
            android:visibility="@{viewModel.isLoading ? View.GONE: View.VISIBLE}">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPokemonTCGCards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:layout_marginBottom="?attr/actionBarSize"
                android:nestedScrollingEnabled="false"
                tools:targetApi="lollipop" />

            <RelativeLayout
                android:id = "@+id/rlFilterEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center" >

                <ImageView
                    android:id = "@+id/ivFilterEmpty"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:src = "@drawable/ic_sad_white_24dp"
                    android:contentDescription="@string/content_description"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ivFilterEmpty"
                    android:textColor="@color/white"
                    android:text = "@string/sorry_no_results_found"/>

            </RelativeLayout>

            <!-- include bottom sheet -->
            <include
                layout="@layout/bottom_sheet_view_pokemon_tcg_card_filter" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <ProgressBar
            android:id="@+id/pbDetails"
            android:visibility="@{viewModel.isLoading ? View.VISIBLE: View.GONE}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</layout>
