<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.app.cellstudio.domain.entity.PokemonTCGSet" />

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />

        <import type="android.view.View" />
    </data>

    <com.app.cellstudio.pokemobile.presentation.view.component.AspectAwareCardView
        android:id="@+id/cvLirRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:onClick="@{listener::onClick}"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/selector_ripple"
        app:aspect_adjust="height"
        app:aspect_height="@integer/pokemon_tcg_card_ratio_height"
        app:aspect_width="@integer/pokemon_tcg_card_ratio_width">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:background="@color/card_view_background">

            <ImageView
                android:id="@+id/ivLiptsLogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="4dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_description"
                tools:src_imageFitStart="@{model.logoUrl}" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="4dp"
                tools:ignore="RelativeOverlap">

                <TextView
                    android:id="@+id/tvLiptsStandard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin = "4dp"
                    android:visibility="@{model.standardLegal ? View.VISIBLE: View.GONE }"
                    android:background="@drawable/rounded_corner_pink"
                    android:padding="6dp"
                    android:text="@string/standard"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/tvLiptsExpanded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin = "4dp"
                    android:visibility="@{model.expandedLegal ? View.VISIBLE: View.GONE }"
                    android:background="@drawable/rounded_corner_blue"
                    android:padding="6dp"
                    android:text="@string/expanded"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="4dp">

                <TextView
                    android:id="@+id/ivLirTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{model.name}"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    tools:text="Hotel Transylvania 3: Summer Vacation"/>

                <TextView
                    android:id="@+id/ivLirYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ivLirTitle"
                    android:text="@{model.releaseDate}"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    tools:text="2018"/>

            </RelativeLayout>

        </RelativeLayout>

    </com.app.cellstudio.pokemobile.presentation.view.component.AspectAwareCardView>

</layout>

