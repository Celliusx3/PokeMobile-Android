<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.app.cellstudio.pokemobile.presentation.interactor.viewmodel.SplashViewModel" />

        <import type="android.view.View" />
    </data>

    <RelativeLayout
        android:id="@+id/rlSplash"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/ivSplashLogo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="24dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_logo" />

            <TextView
                android:id="@+id/tvSplashTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivSplashLogo"
                android:layout_centerHorizontal="true"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="48sp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/pbSplashLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvSplashTitle"
                android:layout_centerHorizontal="true"
                android:visibility="@{viewModel.isLoading ? View.VISIBLE: View.INVISIBLE}" />

            <TextView
                android:id="@+id/tvSplashLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pbSplashLoading"
                android:layout_centerHorizontal="true"
                android:text= "@{viewModel.loadingText}"
                android:textColor="@color/white"
                android:visibility="@{viewModel.isLoading ? View.VISIBLE: View.INVISIBLE}"/>

        </RelativeLayout>

    </RelativeLayout>
</layout>